<Window x:Class="TaskList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TaskName" HorizontalAlignment="Left" Margin="21,22,0,0" TextWrapping="Wrap" Text="TASK NAME" VerticalAlignment="Top" FontSize="50" RenderTransformOrigin="0.5,0.5" Height="73" Width="439"/>
        <Button Content="ShowTask" HorizontalAlignment="Left" Margin="536,177,0,0" VerticalAlignment="Top" Height="30" Width="93" FontSize="18" Click="Button_Click"/>
        <TextBox x:Name="Task_Name_Input" HorizontalAlignment="Left" Margin="175,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="SaveTaskName" Content="Save" HorizontalAlignment="Left" Margin="332,342,0,0" VerticalAlignment="Top" Click="SaveTaskName_Click"/>

    </Grid>
</Window>
