<UserControl x:Class="CashierApp.View.DrinkMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashierApp.View"
             xmlns:viewmodel="clr-namespace:CashierApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewmodel:DrinkMenuViewModel/>
    </UserControl.DataContext>

    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid>
            <Control Template="{StaticResource MenuListBox}"/>

            <Border VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Background="White"
                    Padding="10">
                <Control Template="{StaticResource MenuBottomBar}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
