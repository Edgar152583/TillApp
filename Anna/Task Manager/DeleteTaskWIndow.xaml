<Window x:Class="Task_Manager.DeleteTaskWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Manager"
        mc:Ignorable="d"
        Title="DeleteTaskWIndow" Height="1080" Width="1920"
        WindowState="Maximized" WindowStyle="None">
    <Grid>
        <TextBlock Text="Enter the key of the task you want to delete here." FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,400"/>
        <TextBox Name="KeyText" Width="200" Height="200" FontSize="80"/>
        <Button Name="EnterKeyButton" Width="400" Height="200" Margin="0,600,0,0" Content="Enter" FontSize="60" Click="EnterButtonClicked"/>
        <Button Height="100" Width="200" Margin="0,0,1600,850" Content="Back" FontSize="42" Click="BackButtonClicked"/>
    </Grid>
</Window>
