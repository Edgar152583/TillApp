<Window x:Class="Barista_App.CakesAndPastriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barista_App"
        mc:Ignorable="d"
        Title="CakesAndPastriesWindow" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized">
    <Grid>
        <TextBlock Height="150" Width="900" Margin="0,0,0,800" Text="Cakes and Pastries" FontSize="100" TextAlignment="Center"/>

        <Button Height="200" Width="400" Margin="0,0,700,0" Content="Battenberg&#10;     cake" FontSize="60" Name="BattenbergCakeButton" Click="BattenbergCakeButton_Click"/>
        <Button Height="200" Width="400" Margin="700,0,0,0" Content="Croissant" FontSize="60" Name="CroissantButton" Click="CroissantButton_Click"/>

        <Button Height="150" Width="300" Margin="0,0,1500,800" Content="Back" FontSize="60" Name="BackButton" Click="BackButton_Click"/>
    </Grid>
</Window>
