<Window x:Class="Barista_App.SearchItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barista_App"
        mc:Ignorable="d"
        Title="SearchItemWindow" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized">
    <Grid>
        <TextBlock Height="200" Width="500" Margin="0,0,0,800" Text="Search" FontSize="120" TextAlignment="Center"/>

        <Border BorderThickness="1" BorderBrush="Black"  Height="1080" Width="400" HorizontalAlignment="Right">
            <TextBlock Text=" Current order:&#10;" FontSize="36" Name="OrderDisplayText" />
        </Border>

        <TextBox Height="100" Width="800" Margin="0,0,800,0400" FontSize="80" Name="SearchBar" TextChanged="SearchBar_TextChanged"/>
        <ListBox Height="600" Width="800" Margin="0,300,800,0" FontSize="40" Name="SearchListBox"/>

        <Button Height="200" Width="400" Margin="550,0,0,0" Content="Add Item" FontSize="80" Name="AddItemButton" Click="AddItemButton_Click"/>

        <Button Height="150" Width="300" Margin="0,0,1500,800" Content="Back" FontSize="60" Name="BackButton" Click="BackButton_Click"/>
    </Grid>
</Window>
